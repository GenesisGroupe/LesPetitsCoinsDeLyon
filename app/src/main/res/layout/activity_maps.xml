<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="@dimen/slider_closed_height"
    sothree:umanoShadowHeight="4dp">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context="com.genesis.lespetitscoinsdelyon.ihm.activities.MapsActivity" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/options"
        android:name="com.genesis.lespetitscoinsdelyon.ihm.fragments.ThemesFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_opened_height"
        android:gravity="center|top"
        tools:context="com.genesis.lespetitscoinsdelyon.ihm.activities.MapsActivity" />



</com.sothree.slidinguppanel.SlidingUpPanelLayout>

